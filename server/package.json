{
  "name": "sabrina-frost-server",
  "version": "1.0.0",
  "scripts": {
    "prebuild": "del build",
    "build": "tsc",
    "postbuild": "cpy 'common/**/**.*' server/build/assets --cwd=../ --parents && cpy 'assets/**/*.*' ../build --cwd=src --parents",
    "watch": "cross-env NODE_ENV=development nodemon",
    "debug": "nodemon --config nodemon-debug.json",
    "format": "prettier --write \"src/**/*.ts\"",
    "test": "",
    "start": "node build/app.js"
  },
  "author": "Sabrina Frost <api@sabrinafrost.com>",
  "dependencies": {
    "cpy-cli": "^3.0.0",
    "cross-env": "^6.0.3",
    "del-cli": "^3.0.0",
    "fastify": "^2.11.0",
    "fastify-helmet": "^3.0.2",
    "fastify-openapi-glue": "^1.3.1",
    "fastify-sensible": "^2.1.1",
    "fastify-static": "^2.5.1",
    "fastify-swagger": "^2.5.0",
    "path": "^0.12.7"
  },
  "devDependencies": {
    "@types/node": "^12.12.17",
    "nodemon": "^2.0.2",
    "prettier": "^1.19.1",
    "rimraf": "^3.0.0",
    "ts-node": "^8.5.4",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^3.7.3"
  }
}
